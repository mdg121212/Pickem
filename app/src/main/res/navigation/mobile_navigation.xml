<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.mattg.pickem.ui.home.fragments.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_navigation_dashboard"
            app:destination="@id/navigation_dashboard"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/slide_down"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_up" />
        <action
            android:id="@+id/action_navigation_home_to_navigation_notifications"
            app:destination="@id/navigation_notifications"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/slide_down"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_up"/>
        <action
            android:id="@+id/action_navigation_home_to_currentList"
            app:destination="@id/currentList"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/slide_down"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_up"/>
        <action
            android:id="@+id/action_navigation_home_to_poolManagementFragment"
            app:destination="@id/poolManagementFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.mattg.pickem.ui.dashboard.InvitePoolFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" >
        <action
            android:id="@+id/action_navigation_dashboard_to_navigation_notifications"
            app:destination="@id/navigation_notifications"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/slide_down"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_up"/>
        <action
            android:id="@+id/action_navigation_dashboard_to_navigation_home"
            app:destination="@id/navigation_home"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/slide_down"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_up"/>
    </fragment>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.mattg.pickem.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" >
        <action
            android:id="@+id/action_navigation_notifications_to_navigation_dashboard"
            app:destination="@id/navigation_dashboard"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/slide_down"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_up"/>
        <action
            android:id="@+id/action_navigation_notifications_to_navigation_home"
            app:destination="@id/navigation_home"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/slide_down"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_up"/>
    </fragment>
    <fragment
        android:id="@+id/currentList"
        android:name="com.mattg.pickem.ui.home.fragments.CurrentList"
        android:label="Current Picks"
        tools:layout="@layout/fragment_current_list">
        <action
            android:id="@+id/action_currentList_to_navigation_home"
            app:destination="@id/navigation_home"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/slide_down"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_up"/>
    </fragment>
    <fragment
        android:id="@+id/poolManagementFragment"
        android:name="com.mattg.pickem.ui.home.fragments.PoolManagementFragment"
        android:label="Manage Pools"
        tools:layout="@layout/fragment_pool_management">
        <action
            android:id="@+id/action_poolManagementFragment_to_navigation_home"
            app:destination="@id/navigation_home" />
        <action
            android:id="@+id/action_poolManagementFragment_to_navigation_dashboard"
            app:destination="@id/navigation_dashboard" />
    </fragment>
</navigation>