<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.preference.ListPreference
        android:enabled="true"
        android:entries="@array/night_mode"
        android:entryValues="@array/night_mode_value"
        android:key="@string/pref_key_night"
        android:selectable="true"
        android:summary="@string/pref_night_summary"
        android:title="@string/pref_night_title" />

    <androidx.preference.SwitchPreferenceCompat
        android:enabled="true"
        android:key="@string/pref_key_expert"
        android:selectable="true"
        android:summary="@string/pref_expert_summary"
        android:title="@string/pref_expert_title" />
</PreferenceScreen>